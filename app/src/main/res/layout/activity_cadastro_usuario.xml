<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Registration"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_usr_first-name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="First Name"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_usr_last-name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_usr_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edt_usr_Password-1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_usr_Password-2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <!-- Definir o Tipo de UsuÃ¡rio -->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_usr_Admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin" />

            <RadioButton
                android:id="@+id/rb_usr_attendant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendant" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Register" />

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>